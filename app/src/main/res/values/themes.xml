<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GlyphPlus" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorPrimaryDark">@color/bbw</item>
        <item name="colorAccent">@color/rightblue</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/whiteblack</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_back</item>
        <item name="android:windowBackground">@color/main_back</item>
        <item name="android:navigationBarColor">@color/main_back</item>
    </style>
</resources>